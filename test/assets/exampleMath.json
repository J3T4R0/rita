{
  "$schema": "../../src/schema/schema.json",
  "rules": [
    {
      "id": "rule1",
      "comment": "The time between the date of birth and the 21st of July 2021 must be at least 18 years or 20 must be more than the price plus tax.",
      "rule": {
        "type": "or",
        "parameters": [
          {
            "type": "math",
            "operation": "greaterOrEqual",
            "parameters": [
              {
                "type": "math",
                "operation": "subtract",
                "dateUnit": "years",
                "parameters": [
                  "2021-07-21",
                  {
                    "type": "atom",
                    "typeOfValue": "Date",
                    "path": "dateOfBirth"
                  }
                ]
              },
              18
            ]
          },
          {
            "type": "math",
            "operation": "greater",
            "parameters": [
              20,
              {
                "type": "math",
                "operation": "add",
                "parameters": [
                  {
                    "type": "atom",
                    "typeOfValue": "number",
                    "path": "visit.priceWithoutTax"
                  },
                  {
                    "type": "atom",
                    "typeOfValue": "number",
                    "path": "visit.tax"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
