{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/educorvi/rita/main/src/schema/atom.json",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "atom"
      ]
    },
    "path": {
      "description": "The path to the atom in the data",
      "type": "string"
    },
    "typeOfValue": {
      "description": "The type of the value",
      "type": "string",
      "enum": ["boolean", "number", "Date", "String"],
      "default": "boolean"
    }
  },
  "required": [
    "type",
    "path"
  ],
  "additionalProperties": false
}
