{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/educorvi/rita/main/src/schema/rule.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "comment": {
      "type": "string",
      "description": "A comment about what the rule does"
    },
    "rule": {
      "$ref": "term.json"
    }
  },
  "required": ["id", "rule"]
}
