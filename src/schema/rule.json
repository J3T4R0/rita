{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/educorvi/rita/main/src/schema/rule.json",
  "title": "Rule",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "rule": {
      "$ref": "term.json"
    }
  },
  "required": ["id", "rule"],
  "examples": [
    {
      "id": "rule1",
      "rule": {
        "type": "and",
        "parameters": [
          {
            "type": "atom",
            "path": "member"
          },
          {
            "type": "not",
            "parameters": [
              {
                "type": "atom",
                "path": "employee"
              }
            ]
          }
        ]
      }
    }
  ]
}
