{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/educorvi/rita/main/src/schema/operator.json",
  "title": "Operator",
  "oneOf": [
    {
      "title": "Binary operator",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "and",
            "or",
            "xor"
          ]
        },
        "parameters": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "term.json"
          }
        }
      },
      "required": [
        "parameters",
        "type"
      ],
      "additionalProperties": false
    },
    {
      "title": "Unary operator",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "not"
          ]
        },
        "parameters": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "$ref": "term.json"
          }
        }
      },
      "required": [
        "parameters",
        "type"
      ],
      "additionalProperties": false
    }
  ]
}
